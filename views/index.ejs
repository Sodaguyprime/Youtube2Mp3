<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YouTube to MP3 Converter</title>
    <link rel="stylesheet" href="/CSS/styles.css">
</head>
<body>
    <div class="container">
        <h1>YouTube to MP3 Converter</h1>
        <form action="/convert-mp3" method="POST" id="form">
            <div class="input-group">
                <label for="youtube-url">YouTube Video ID:</label>
                <input type="text" name="VideoID" id="youtube-url" placeholder="Enter video ID">
                <button type="submit" id="convert-btn">Convert</button>
            </div>
        </form>
    </div>

    <div class="bottom-container">
        <% if (typeof success !== "undefined") { %>
            <% if (success) { %>
                <div class="success">
                    <p><%= song_title %></p>
                    <a href="<%= song_link %>" download>
                        <button id="download-btn">Download MP3</button>
                    </a>
                </div>
            <% } else { %>
                <div class="error">
                    <p><%= message %></p>
                </div>
            <% } %>
        <% } %>
    </div>
</body>
</html>